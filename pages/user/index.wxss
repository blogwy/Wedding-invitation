.user{
  box-sizing: border-box;
  height: 100vh;
  padding: 40px 0px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.container {
  display: flex;
}
